<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.MathFlash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="backgroundColor">@color/background</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/refine_splash</item>
    </style>


    <style name="Button.purple" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Button.orange" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Button.teal" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Button.green" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.MathFlash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MathFlash.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryVariant">@color/white</item>
    </style>


    <style name="Theme.MathFlash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>